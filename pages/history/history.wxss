/* pages/history/history.wxss */
.container {
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: flex-start;
}

.record {
  width: 100vw;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  padding-top: 10px;
  padding-right: 10px;
}

.record:hover {
  background-color: rgba(0, 0, 0, 0.3);
}

.exp {
  font-size: 18px;
}

.result {
  font-weight: bold;
  font-size: 24px;
}