/* pages/calc/calc.wxss */
.container {
  width: 100%;
  height: 100vh;
  display: flex;
  background-color: #15141a;
}

/* 结果界面 */
.screen {
  flex: 1;
  width: 100vw;
  margin-bottom: 2px;
  color:#eef7f2;
}

.screen .history, .screen .result {
  display: flex;
  justify-content: flex-end;
  padding-top: 10px;
  padding-right: 10px;
}

.screen .history {
  height: 1rem;
}

.screen .result {
  padding-top: 15px;
}

.screen .history text {
  font-size: 1.3em;
}

.screen .result text {
  font-size: 2em;
}

/* 界面图标 */
.elements {
  display: flex;
  flex-direction: row;
  flex: 1;
  flex-flow: row wrap;
  align-content: flex-end;
  box-sizing: border-box;
}

button {
  flex: 0 0 25%;
  background-color: #28282b;
  color:#eef7f2;
  box-sizing: border-box;
  height: 4rem;
  vertical-align: middle;
  font-size: 1.5em;
  margin-bottom: 2px;
}

.equal {
  background-color: #44B549;
}