/* 界面图标 */
.elements {
  display: flex;
  flex-flow: row wrap;
  box-sizing: border-box;
}

.elements button {
  flex-basis: 25%;
  background-color: #28282b;
  color:#eef7f2;
  box-sizing: border-box;
  height: 4rem;
  vertical-align: middle;
  font-size: 1.5em;
  margin-bottom: 2px;
}

.elements button:active {
  background-color: rgba(0, 0, 0, 0.3);
}

.elements .equal {
  background-color: #44B549;
}