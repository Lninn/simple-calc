/* pages/calc/calc.wxss */
.container {
  width: 100%;
  height: 100vh;
  display: flex;
  background-color: #15141a;
}

/* 显示界面 */
.screen {
  flex: 1;
  width: 100vw;
  margin-bottom: 2px;
  color:#eef7f2;
  position: relative;
}

.screen .expression, .screen .result {
  display: flex;
  justify-content: flex-end;
  padding: 10px;
}

.screen .expression {
  min-height: 2rem;
}

.screen .result {
  padding: 0;
  padding-right: 10px;
}

.screen .expression text {
  font-size: 1.2em;
}

.screen .result text {
  font-size: 2em;
}

